<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Client Action for New Transcription -->
    <record id="action_medical_transcription" model="ir.actions.client">
        <field name="name">Nouvelle Transcription</field>
        <field name="tag">medical_transcription.transcription_action</field>
    </record>

    <!-- Tree View for Transcription History -->
    <record id="view_medical_transcription_tree" model="ir.ui.view">
        <field name="name">medical.transcription.tree</field>
        <field name="model">medical.transcription</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="template_name"/>
                <field name="audio_filename"/>
                <field name="create_date" string="Date"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state in ('recording', 'transcribing')"
                       decoration-primary="state == 'review'"
                       decoration-success="state == 'validated'"
                       decoration-danger="state == 'error'"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Transcription Details -->
    <record id="view_medical_transcription_form" model="ir.ui.view">
        <field name="name">medical.transcription.form</field>
        <field name="model">medical.transcription</field>
        <field name="arch" type="xml">
            <form string="Medical Transcription">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,transcribing,review,validated"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Template">
                            <field name="template_type"/>
                            <field name="template_name"/>
                        </group>
                        <group string="API">
                            <field name="api_transcription_id"/>
                            <field name="audio_filename"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Transcription Brute" name="raw">
                            <field name="whisper_transcription" widget="text"
                                   placeholder="Transcription brute de Whisper..."/>
                        </page>
                        <page string="Texte Nettoye" name="cleaned">
                            <field name="cleaned_text" widget="text"
                                   placeholder="Texte nettoye par l'IA..."/>
                        </page>
                        <page string="Rapport Medical" name="report">
                            <field name="medical_report" widget="text"
                                   placeholder="Rapport medical genere..."/>
                        </page>
                        <page string="Donnees Extraites" name="extracted">
                            <field name="extracted_data_html" class="w-100"/>
                            <separator string="Modifier le JSON brut"/>
                            <field name="extracted_data_json" widget="text"
                                   placeholder="Donnees extraites (JSON)..."/>
                        </page>
                        <page string="Donnees Validees" name="validated">
                            <field name="validated_data_html" class="w-100"/>
                            <separator string="Modifier le JSON brut"/>
                            <field name="validated_data_json" widget="text"
                                   placeholder="Donnees validees (JSON)..."/>
                        </page>
                        <page string="Fichiers" name="files">
                            <group>
                                <field name="pdf_file" filename="pdf_filename"/>
                                <field name="pdf_filename" invisible="1"/>
                                <field name="json_file" filename="json_filename"/>
                                <field name="json_filename" invisible="1"/>
                                <field name="audio_file" filename="audio_filename"/>
                            </group>
                        </page>
                        <page string="Erreur" name="error"
                              attrs="{'invisible': [('state', '!=', 'error')]}">
                            <field name="error_message" widget="text" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_medical_transcription_search" model="ir.ui.view">
        <field name="name">medical.transcription.search</field>
        <field name="model">medical.transcription</field>
        <field name="arch" type="xml">
            <search string="Search Transcriptions">
                <field name="name"/>
                <field name="template_name"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Review" name="review" domain="[('state', '=', 'review')]"/>
                <filter string="Validated" name="validated" domain="[('state', '=', 'validated')]"/>
                <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                <separator/>
                <filter string="Today" name="today"
                        domain="[('create_date', '>=', context_today().strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Template" name="template" context="{'group_by': 'template_name'}"/>
                    <filter string="Date" name="date" context="{'group_by': 'create_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Transcription History -->
    <record id="action_medical_transcription_history" model="ir.actions.act_window">
        <field name="name">Historique des Transcriptions</field>
        <field name="res_model">medical.transcription</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_medical_transcription_search"/>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune transcription trouvee
            </p>
            <p>
                Cliquez sur "Nouvelle Transcription" pour commencer.
            </p>
        </field>
    </record>

    <!-- Main Menu -->
    <menuitem id="menu_medical_transcription_root"
              name="Transcription Medicale"
              sequence="100"/>

    <!-- New Transcription Menu -->
    <menuitem id="menu_medical_transcription_main"
              name="Nouvelle Transcription"
              parent="menu_medical_transcription_root"
              action="action_medical_transcription"
              sequence="10"/>

    <!-- History Menu -->
    <menuitem id="menu_medical_transcription_history"
              name="Historique"
              parent="menu_medical_transcription_root"
              action="action_medical_transcription_history"
              sequence="20"/>

    <!-- Settings Action -->
    <record id="action_medical_transcription_settings" model="ir.actions.act_window">
        <field name="name">Parametres API</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module': 'medical_transcription'}</field>
    </record>

    <!-- Client Action for Transcription Lookup -->
    <record id="action_medical_transcription_lookup" model="ir.actions.client">
        <field name="name">Consulter une Transcription</field>
        <field name="tag">medical_transcription.transcription_lookup</field>
    </record>

    <!-- Configuration Menu -->
    <menuitem id="menu_medical_transcription_config"
              name="Configuration"
              parent="menu_medical_transcription_root"
              sequence="100"
              groups="base.group_system"/>

    <!-- Settings Menu Item -->
    <menuitem id="menu_medical_transcription_settings"
              name="Parametres API"
              parent="menu_medical_transcription_config"
              action="action_medical_transcription_settings"
              sequence="10"
              groups="base.group_system"/>

    <!-- Lookup Menu Item -->
    <menuitem id="menu_medical_transcription_lookup"
              name="Consulter Transcription API"
              parent="menu_medical_transcription_config"
              action="action_medical_transcription_lookup"
              sequence="20"
              groups="base.group_system"/>
</odoo>
