<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_medical_transcription"
            model="ir.ui.view">
        <field name="name">res.config.settings.view.form.medical.transcription</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block"
                     data-string="Medical Transcription"
                     data-key="medical_transcription"
                     groups="base.group_system">
                    <h2>Medical Transcription API</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <i class="fa fa-globe fa-2x text-primary"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="medical_transcription_api_url"/>
                                <div class="text-muted">
                                    Base URL of the Flask transcription API.<br/>
                                    <strong>Docker:</strong> Use host.docker.internal:5001 (Mac/Windows)
                                    or the container IP (Linux)
                                </div>
                                <div class="content-group mt-2">
                                    <field name="medical_transcription_api_url"
                                           class="o_light_label"
                                           placeholder="http://host.docker.internal:5001"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <i class="fa fa-clock-o fa-2x text-warning"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="medical_transcription_api_timeout"/>
                                <div class="text-muted">
                                    Timeout for transcription requests in seconds.
                                    Longer audios may need more time (default: 300s = 5 minutes).
                                </div>
                                <div class="content-group mt-2">
                                    <field name="medical_transcription_api_timeout"
                                           class="o_light_label"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
